{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@types/jest",
      "@types/node",
      "@types/webpack-env",
      "jest-extended"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": [
    "components/**/*.vue",
    "lib/**/*.ts",
    "pages/**/*.vue",
    "plugins/**/*.ts",
    "test/**/*.ts",
    "node_modules/bdd-lazy-var/index.d.ts"
  ],
}
